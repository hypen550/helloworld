<!DOCTYPE html>
<html>
<head><title>Articles</title></head>
<body>
  <h1>Articles</h1>
  <% articles.forEach(article => { %>
    <div>
      <h2><%= article.title %></h2>
      <p><%= article.description %></p>
      <% if (article.image) { %>
        <img src="<%= article.image %>" width="200">
      <% } %>
    </div>
  <% }); %>
</body>
</html>